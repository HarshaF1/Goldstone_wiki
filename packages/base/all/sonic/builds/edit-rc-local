#!/bin/sh

set -e
set -x

src=$1; shift
dst=$1; shift

/bin/ed <<-END
	H
	P
	r $src
	/SONIC_VERSION/
	i
	ip li show dev ma1 &> /dev/null && ip li set down dev ma1
	ip li show dev ma1 &> /dev/null && ip li set name eth0 dev ma1
	ip li set up dev eth0
	.
	,s|[.][/][$]onie_grub_cfg|\$onie_grub_cfg|
	1
	/[>][>] [/]host[/]machine[.]conf/
	/done/
	a
	echo "onie_platform=\${onie_build_platform}" >> /host/machine.conf
	.
	w $dst
	q
	END

exit $?

